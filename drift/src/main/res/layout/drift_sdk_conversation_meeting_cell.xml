<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <include
        android:id="@+id/drift_sdk_conversation_meeting_cell_day_header"
        layout="@layout/drift_sdk_conversation_day_divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/meeting_view_background"
        android:layout_margin="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/drift_sdk_conversation_meeting_cell_user_image_view"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_alignParentStart="true"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_meeting_icon"
                android:layout_toEndOf="@id/drift_sdk_conversation_meeting_cell_user_image_view"
                android:layout_below="@id/drift_sdk_conversation_meeting_cell_user_image_view"
                android:layout_marginStart="-10dp"
                android:layout_marginTop="5dp"
                />

            <TextView
                android:id="@+id/drift_sdk_conversation_meeting_cell_title_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Schedule a Meeting with Jay Pritchet"
                android:layout_toEndOf="@id/drift_sdk_conversation_meeting_cell_user_image_view"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="10dp"
                android:textColor="@color/drift_sdk_meeting_text_color"
                android:textSize="12sp"
                />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/drift_sdk_day_divider_color"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="55dp">

            <TextView
                android:id="@+id/drift_sdk_conversation_meeting_cell_time_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Schedule a Meeting with Jay Pritchet"
                android:textColor="@color/drift_sdk_meeting_text_color"
                android:textSize="12sp"
                />

            <TextView
                android:id="@+id/drift_sdk_conversation_meeting_cell_date_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Schedule a Meeting with Jay Pritchet"
                android:textColor="@color/drift_sdk_meeting_text_color"
                android:textSize="12sp"
                android:layout_marginTop="5dp"
                />
            <TextView
                android:id="@+id/drift_sdk_conversation_meeting_cell_timezone_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Schedule a Meeting with Jay Pritchet"
                android:textColor="@color/drift_sdk_meeting_text_color"
                android:textSize="12sp"
                android:layout_marginTop="5dp"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>