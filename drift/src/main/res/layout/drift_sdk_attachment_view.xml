<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/drift_sdk_attachment_view_background"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingStart="5dp"
    android:paddingEnd="5dp"
    android:minWidth="150dp">

    <RelativeLayout
        android:layout_width="40dp"
        android:layout_height="40dp">

        <ImageView
            android:id="@+id/drift_sdk_attachment_view_icon_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/attachment_icon"
            android:background="@color/drift_sdk_red"/>

        <TextView
            android:id="@+id/drift_sdk_attachment_view_extension_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            tools:text="JAVA"
            android:gravity="center"
            android:ellipsize="end"
            android:textAllCaps="true"
            android:textColor="@color/drift_sdk_attachment_cell_background_color"
            android:textSize="12sp"
            android:layout_marginBottom="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginStart="2dp"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/drift_sdk_attachment_view_file_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:ellipsize="end"
            tools:text="R.java"
            android:textColor="@color/drift_sdk_black"
            android:textSize="12sp"/>

        <TextView
            android:layout_marginTop="3dp"
            android:id="@+id/drift_sdk_attachment_view_file_size_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:ellipsize="end"
            tools:text="75 KB"
            android:textColor="@color/drift_sdk_textColor"
            android:textSize="12sp"/>


    </LinearLayout>

</LinearLayout>